<h1>New bookmark</h1>

<%= simple_form_for([@list, @bookmark]) do |f| %>

  <div class="form-inputs">
    <%= f.association :movie %>
    <%= f.input :comment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to 'Back', lists_path(@list), class: "btn btn-secondary" %>
