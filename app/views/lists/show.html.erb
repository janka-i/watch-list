
<div class="home-banner">
  <h2 class="mb-5">
    <span id="banner-typed-text"></span>
  </h2>
  <h1 class="mt-3"><%= @list.name %></h1>
</div>


<div class="container mt-5">
  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
      <%= bookmark.comment %>
      <div class="card-button">
        <%= link_to 'delete',
                  bookmark_path(bookmark),
                  method: :delete,
                  class: 'btn btn-gradient',
                  data: { confirm: 'Do you want to delete this movie?'}
        %>
      </div>
    <% end %>
  </div>

<%= link_to 'Add a bookmark', new_list_bookmark_path(@list), class: "btn btn-ghost" %>
<br>
<br>
<%= link_to 'Back', lists_path, class: "btn btn-ghost" %>

</div>
