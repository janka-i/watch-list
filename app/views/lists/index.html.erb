
<div class="home-banner">
  <h2 class="mb-5">
    <span id="banner-typed-text"></span>
  </h2>
  <h1 class="mt-3">My Lists</h1>
</div>

<div class="container mt-5">
  <div class="cards">
    <% @lists.each do |list| %>
      <%= link_to list do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.indianexpress.com/2020/12/Wonder-Woman-1984-live-blog-1200.jpg)">
          <%= list.name %>
        </div>
      <% end %>
    <% end %>
  </div>
<br>
  <%= link_to "Create New List", new_list_path, class: "btn btn-ghost"  %>

</div>
